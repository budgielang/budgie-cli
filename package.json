{
  "name": "gls-cli",
  "version": "0.1.5",
  "description": "Node CLI for General Language Syntax (GLS).",
  "main": "lib/index.js",
  "bin": {
    "gls": "bin/gls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/highschoolhacking/gls-cli.git"
  },
  "keywords": [
    "general",
    "language",
    "syntax",
    "gls",
    "cli"
  ],
  "author": "Josh Goldberg <joshuakgoldberg@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/highschoolhacking/gls-cli/issues"
  },
  "homepage": "https://github.com/highschoolhacking/gls-cli#readme",
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "general-language-syntax": "^0.3.22",
    "glob": "^7.1.2",
    "minimatch": "^3.0.4",
    "mz": "^2.7.0",
    "ts-gls": "^0.1.4",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/glob": "^5.0.35",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.5",
    "@types/mz": "0.0.32",
    "@types/node": "^10.7.1",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "mocha": "^5.2.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "tslint": "5.11.0"
  },
  "peerDependencies": {
    "general-language-syntax": "^0.3.22",
    "ts-gls": "^0.1.4",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "src": "npm run src:tsc && npm run src:tslint",
    "src:tsc": "tsc -p .",
    "src:tslint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "test": "npm run test:tsc && npm run test:tslint && npm run test:run",
    "test:tsc": "tsc -p test",
    "test:tslint": "tslint -c tslint.json -p test/tsconfig.json -t stylish",
    "test:run": "mocha test/unit/**/*.js",
    "util": "npm run util:tsc && npm run util:tslint",
    "util:tsc": "tsc -p util",
    "util:tslint": "tslint -c tslint.json -p util/tsconfig.json -t stylish",
    "verify": "npm run src && npm run util && npm run test"
  }
}
